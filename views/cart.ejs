    <script>
      $(document).ready(function () {
        var myJson;
        var totalSum ;
        window.onload = async function () {
          const response = await fetch("http://localhost:4000/get-cart-items");
          const myJson = await response.json();
          //   console.log(myJson)
          var size = myJson.length;
          var table = document.getElementById("myTable");
          totalSum = 0;
          for (var i = 0; i < size; i++) {
            var row = table.insertRow(i + 1);

            var product_ID = myJson[i].product_id;
            var data = { product_id: product_ID };
            var product_data = await fetch(
              "http://localhost:4000/get-product-detail",
              {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data),
              }
            );
            var product_data_json = await product_data.json();
            console.log(product_data_json);

            var product_name = row.insertCell(0);
            var product_price = row.insertCell(1);
            var product_quantity = row.insertCell(2);
            product_name.innerHTML = product_data_json[0].name;
            product_price.innerHTML = product_data_json[0].price;
            product_quantity.innerHTML = 1;
            totalSum += parseInt(product_price.innerHTML);
          }
          var row = table.insertRow(size + 1);
          var product_name = row.insertCell(0);
          var product_price = row.insertCell(1);
          var product_quantity = row.insertCell(2);
          var total = row.insertCell(3);
          product_name.innerHTML = "";
          product_price.innerHTML = "";
          product_quantity.innerHTML = "";

          console.log(`total is ${totalSum}`);
          total.innerHTML = totalSum;
        };

        document.getElementById("clear-cart").onclick = async function () {
          var product_data = await fetch("http://localhost:4000/clear-cart", {
